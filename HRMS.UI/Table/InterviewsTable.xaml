<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HRMS.UI"
      xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid" x:Class="InterviewsTable"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InterviewsTable">
    <Grid>

        <dxg:GridControl AutoGenerateColumns="None" EnableSmartColumnsGeneration="True">
            <dxg:GridControl.Columns>
                <dxg:GridColumn FieldName="INTERVIEWDATE" Header="Interview Date" Width="*"/>
                <dxg:GridColumn FieldName="INTERVIEWNOTES" Header="INTERVIEW NOTES" Width="*"/>
                <dxg:GridColumn FieldName="INTERVIEWOUTCOME" Header="INTERVIEW OUTCOME" Width="*"/>
                <dxg:GridColumn FieldName="CANDIDATE" Header="CANDIDATE" Width="*"/>
                <dxg:GridColumn FieldName="INTERVIEWERID" Header="INTERVIEWER" Width="*"/>
                <dxg:GridColumn FieldName="ISACTIVE" Header="Is Active" Width="*"/>
            </dxg:GridControl.Columns>
            <dxg:GridControl.View>
                <dxg:TableView AllowFixedGroups="False" ShowGroupPanel="False" FontFamily="Arial" FontSize="14"/>
            </dxg:GridControl.View>
        </dxg:GridControl>

    </Grid>
</Page>
