<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HRMS.UI"
      xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid" x:Class="SalaryTable"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SalaryTable">
    <Grid>
        <dxg:GridControl AutoGenerateColumns="None" EnableSmartColumnsGeneration="True">
            <dxg:GridControl.Columns>
                <dxg:GridColumn FieldName="BASESALARY" Header="BASE SALARY" Width="*"/>
                <dxg:GridColumn FieldName="BONUS" Header="Bonus" Width="*"/>
                <dxg:GridColumn FieldName="DEDUCTIONS" Header="DEDUCTIONS" Width="*"/>
                <dxg:GridColumn FieldName="EFFECTIVEDATE" Header="EFFECTIVE DATE" Width="*"/>
                <dxg:GridColumn FieldName="EMPLOYEE" Header="Employee" Width="*"/>
                <dxg:GridColumn FieldName="ISACTIVE" Header="Is Active" Width="*"/>
            </dxg:GridControl.Columns>
            <dxg:GridControl.View>
                <dxg:TableView AllowFixedGroups="False" ShowGroupPanel="False" FontFamily="Arial" FontSize="14"/>
            </dxg:GridControl.View>
        </dxg:GridControl>


    </Grid>
</Page>
