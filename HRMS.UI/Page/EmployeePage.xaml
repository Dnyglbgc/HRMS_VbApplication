<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HRMS.UI"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid" x:Class="EmployeePage"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Background="White">
                <Grid Height="200">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>

                    </Grid.ColumnDefinitions>
                    <Label Content="Doğum Tarihi:" Grid.Column="0" VerticalAlignment="Top" Margin="10,10,10,0"/>
                    <DatePicker x:Name="birthdate" VerticalAlignment="Top" Margin="90,10,0,0" Grid.Column="0" HorizontalAlignment="Left" Width="125"/>
                    <Label Content="Soyad:" Grid.Column="0" Margin="10,50,10,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="lastname" Text="Soyad Giriniz:" Grid.Column="0" Margin="90,50,0,0" BorderThickness="0,0,0,1" Background="{x:Null}" VerticalAlignment="Top" HorizontalAlignment="Left" Width="125" />
                    <Button Content="ARA" Grid.Column="1" Margin="0,147,0,27" HorizontalAlignment="Center" Width="60" Foreground="Black" Background="LightGray" Click="searchEmployeeButton_Click"/>

                    <Label Content="Ad:"  Grid.Column="1" VerticalAlignment="Top" Margin="20,10,0,0" HorizontalAlignment="Left" Width="62"/>
                    <TextBox  x:Name="firstname" Grid.Column="1" BorderThickness="0,0,0,1" Margin="90,10,0,0" Background="{x:Null}" VerticalAlignment="Top" HorizontalAlignment="Left" Width="125"/>

                    <Label  Content="Cinsiyet:" Grid.Column="1" VerticalAlignment="Top" Margin="20,50,0,0" HorizontalAlignment="Left" />
                    <ComboBox  x:Name="gender" Grid.Column="1" BorderThickness="0,0,0,1" Margin="90,50,0,0" Background="{x:Null}" VerticalAlignment="Top" HorizontalAlignment="Left" Width="125"/>

                    <Label Content="Giriş Tarihi:" Grid.Column="2" VerticalAlignment="Top" Margin="20,10,0,0" HorizontalAlignment="Left"/>
                    <TextBox  x:Name="hiredate" Grid.Column="2" BorderThickness="0,0,0,1" Margin="90,10,0,0" Background="{x:Null}" VerticalAlignment="Top" HorizontalAlignment="Left" Width="125"/>

                    <Label Content="Telefon:" Grid.Column="2" VerticalAlignment="Top" Margin="20,50,0,0" HorizontalAlignment="Left"/>
                    <TextBox  x:Name="phonenumber" Grid.Column="2" BorderThickness="0,0,0,1" Margin="90,50,0,0" Background="{x:Null}" VerticalAlignment="Top" HorizontalAlignment="Left" Width="125"/>

                    <Label Content="Email:" Grid.Column="3" VerticalAlignment="Top" Margin="20,10,0,0" HorizontalAlignment="Left"/>
                    <TextBox  x:Name="email" Grid.Column="3" BorderThickness="0,0,0,1" Margin="90,10,0,0" Background="{x:Null}" VerticalAlignment="Top" HorizontalAlignment="Left" Width="125"/>

                    <Label Content="Yıllık İzin:" Grid.Column="3" VerticalAlignment="Top" Margin="20,50,0,0" HorizontalAlignment="Left"/>
                    <TextBox  x:Name="annualleave" Grid.Column="3" BorderThickness="0,0,0,1" Margin="90,50,0,0" Background="{x:Null}" VerticalAlignment="Top" HorizontalAlignment="Left" Width="125"/>

                    <Label Content="Departman:" Grid.Column="0" VerticalAlignment="Top" Margin="10,90,0,0" HorizontalAlignment="Left"/>
                    <TextBox  x:Name="departmenId" Grid.Column="0" VerticalAlignment="Top" Margin="90,90,0,0" BorderThickness="0,0,0,1" Background="{x:Null}"  HorizontalAlignment="Left" Width="125"/>

                    <Label Content="Pozisyon:" Grid.Column="1" VerticalAlignment="Top" Margin="10,90,0,0" HorizontalAlignment="Left"/>
                    <TextBox  x:Name="positionId" Grid.Column="1" VerticalAlignment="Top" Margin="90,90,0,0" BorderThickness="0,0,0,1" Background="{x:Null}"  HorizontalAlignment="Left" Width="125"/>


                    <Label Content="Müdür:" Grid.Column="2" VerticalAlignment="Top" Margin="10,90,0,0" HorizontalAlignment="Left"/>
                    <TextBox x:Name="manegerId" Grid.Column="2" VerticalAlignment="Top" Margin="90,90,0,0" BorderThickness="0,0,0,1" Background="{x:Null}"  HorizontalAlignment="Left" Width="125"/>

                    <Label Content="Aktif/Pasif:" Grid.Column="3" VerticalAlignment="Top" Margin="10,90,0,0" HorizontalAlignment="Left"/>
                    <CheckBox x:Name="ısactive" Grid.Column="3" VerticalAlignment="Top" Margin="90,90,0,0"  Background="{x:Null}"  HorizontalAlignment="Left" Width="125"/>
                </Grid>
            </Border>
            <Border Grid.Row="1" Background="LightGray"/>
            <dxg:GridControl AutoGenerateColumns="AddNew" EnableSmartColumnsGeneration="True" Grid.Row="1" Background="LightGray" x:Name="employeeGrid">
                <dxg:GridControl.Columns>
                    <dxg:GridColumn FieldName="FIRSTNAME" Header="AD" AllowEditing="False"/>
                    <dxg:GridColumn FieldName="LASTNAME" Header="SOYAD" AllowEditing="False"/>
                    <dxg:GridColumn FieldName="BIRTHDATE" Header="DOĞUM TARİHİ" AllowEditing="False"/>
                    <dxg:GridColumn FieldName="GENDER" Header="CİNSİYET" AllowEditing="False"/>
                    <dxg:GridColumn FieldName="HIREDATE" Header="İŞE GİRİŞ TARİHİ" AllowEditing="False"/>
                    <dxg:GridColumn FieldName="EMAIL" Header="EMAIL" AllowEditing="False"/>
                    <dxg:GridColumn FieldName="PHONENUMBER" Header="TELEFON" AllowEditing="False"/>
                    <dxg:GridColumn FieldName="POSITIONID" Header="POZİSYON" AllowEditing="False"/>
                    <dxg:GridColumn FieldName="DEPARTMANID" Header="DEPARTMAN" AllowEditing="False"/>
                    <dxg:GridColumn FieldName="MANAGERID" Header="MÜDÜR" AllowEditing="False"/>
                    <dxg:GridColumn FieldName="ANNUALLEAVE" Header="YILLIK İZNİ" AllowEditing="False"/>
                    <dxg:GridColumn FieldName="ISACTIVE" Header="AKTİF/PASİF" AllowEditing="False"/>

                </dxg:GridControl.Columns>
                <dxg:GridControl.View>
                    <dxg:TableView AutoWidth="True" ShowGroupPanel="False" ShowIndicator="False"/>
                </dxg:GridControl.View>
            </dxg:GridControl>


        </Grid>
    </DockPanel>
</UserControl>
